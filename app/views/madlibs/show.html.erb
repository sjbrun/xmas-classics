<!-- MADLIB SHOW PAGE -->
<div align="center" class="jumbotron lights">
  <%= image_tag("lights.gif") %>
  <% if @madlib.name %>
    <h1 class="title"><%= @madlib.name %></h1>
  <% else %>
    <h1 class="title">"No name #<%= @madlib.id %>"</h1>
  <% end %>
  <h3>(to the tune of "<%= @madlib.song.name %>")</h3>
</div> <!-- end page header -->
<div align="center">
  <h3>
    <%= link_to('Edit Madlib', edit_song_madlib_path(@song, @madlib)) %>
  </h3>
</div>
<br>

<div align="center" class="container-fluid">
  <audio controls="controls" src="<%=raw(@madlib.song.audio)%>"></audio>
</div>

<div align="center" class="container-fluid">
  <div class="well lyrics">
  <%= simple_format(@new_lyrics) %>
  </div>
</div>
